@model IEnumerable<ThAmCo.Events.Data.GuestBooking>

@{
}

<h2>@ViewData["Title"] (@Model.Count())</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attended)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>
            <td>
            @{  
                if (item.Attended)
                {
                    @:<span class="glyphicon glyphicon-ok"></span>
                }
                else
                {
                    @:<span class="glyphicon glyphicon-remove"></span>
                }
            }
            </td>
            <td>
                @{
                    if (!item.Attended)
                    {
                        @Html.ActionLink("Attend", "Attend", new
                        {
                            id = item.EventId,
                            customerId = item.CustomerId
                        });
                        @:|
                    }
                    @Html.ActionLink("Remove", "Remove", new { id = item.EventId, customerId = item.CustomerId })
                }
            </td>
        </tr>
}
    </tbody>
</table>
